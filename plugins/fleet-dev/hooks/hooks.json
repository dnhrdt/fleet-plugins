{
  "description": "Fleet-dev hooks for Windows/Git Bash compatibility and skill enforcement",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/scripts/block-npm-npx.js\"",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/scripts/research-skill-reminder.js\"",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
